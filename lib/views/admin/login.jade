doctype html
html(lang="en")
	include ../header
	block additionalHeader
		link(rel='stylesheet', href='/css/caliper_login.css')
	body(style="padding-top: 70px;")
		.container
			form.form-signin(role='form', method='post', action='/admin/login')
				h2.form-signin-heading.text-center Please Login
				input.form-control(name='username', type='text', placeholder='Username', required='required', autofocus='autofocus')
				input.form-control(name='password', type='password', placeholder='Password', required='required')
				label.checkbox
					input(type='checkbox', value='remember-me')
					| Remember Me
				button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

		include ../footer
	block additionalFooter
		script(src='//cdnjs.cloudflare.com/ajax/libs/holder/2.3.1/holder.min.js')