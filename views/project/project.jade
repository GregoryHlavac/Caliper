extends ../layout

block content
	.container
		ul.breadcrumb
			li.active #{project.title}
		.panel.panel-primary
			.panel-heading Crashes Per Release
			canvas(id="summaryChart", height="225")


		if releases.length > 0
			.panel.panel-primary
				.panel-heading Releases
				.container-fluid
					.row
						for rls in releases
							.col-md-4
								.panel.panel-info(id="#{rls.version}",style='height: 250px; margin-top: 20px;')
									.text-center
										a(href='/projects/#{project.title}/#{rls.version}') #{rls.version}
				.panel-footer
					.text-center
						a(href='/projects/#{project.title}/archive') View Archived Releases
		else
			.well.well-sm
				h2.text-center This project does not have any releases yet tracked.

block additionalFooter
	script(src='/js/projects/caliper_project_summary.js')