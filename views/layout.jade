doctype html
html(lang="en", ng-app="caliperApp")
	head
		title #{page_title}
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
		script(src='/bootstrap/js/bootstrap.min.js')
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.3/angular.min.js')
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.3/angular-resource.min.js')
		script(src='/js/caliperApp.js')
		script(src='/js/caliper_services.js')
		script(src='/js/caliper_controllers.js')
	body(style="padding-top: 70px;", ng-controller="NavigatorCtrl")
		.navbar.navbar-default.navbar-fixed-top(role='navigation')
			.container
				.navbar-header
					a.navbar-brand(href='/') Caliper
				.navbar-collapse.collapse
					ul.nav.navbar-nav
						li.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown')
								| Projects
								b.caret
							ul.dropdown-menu
								li(ng-repeat="project in projects")
									a(href="/projects/{{project.title}}")
										| {{project.title}}
					ul.nav.navbar-nav.navbar-right
						form.navbar-form.navbar-left(role='search')
							input.form-control(type='text', placeholder='Search')

		block content